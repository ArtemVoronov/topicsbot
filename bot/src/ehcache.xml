<?xml version="1.0" encoding="UTF-8"?>
<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="ehcache.xsd">

  <defaultCache maxElementsInMemory="10000" eternal="false" timeToIdleSeconds="120" timeToLiveSeconds="120"
                diskSpoolBufferSizeMB="30"  diskExpiryThreadIntervalSeconds="120"
                memoryStoreEvictionPolicy="LRU" statistics="false">
  </defaultCache>

  <cache name="chats" maxElementsInMemory="10000" eternal="false" timeToLiveSeconds="3600"/>
  <cache name="users" maxElementsInMemory="50000" eternal="false" timeToLiveSeconds="7200"/>
  <cache name="topics" maxElementsInMemory="10000" eternal="false" timeToLiveSeconds="3600"/>
</ehcache>